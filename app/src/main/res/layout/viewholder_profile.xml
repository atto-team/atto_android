<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        tools:context=".view.controller.activity.login.LoginActivity"
        android:background="@color/colorWhite">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="96dp" android:layout_marginLeft="30dp">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp" app:srcCompat="@drawable/ic_default_profile"
                    android:id="@+id/imageView2"
                    android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="96dp"
                android:layout_gravity="center_vertical">
            <TextView
                    android:text="QRcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_QRcode" android:textStyle="bold"
                    android:textSize="10sp" android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp" android:layout_marginTop="30dp"/>
            <TextView
                    android:text="Click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/QRcode" android:textStyle="bold"
                    android:textSize="12sp" android:textColor="@color/colorBlack"
                    android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="96dp"
                android:layout_gravity="center_vertical">
            <TextView
                    android:text="FOLLOW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_follow" android:textStyle="bold"
                    android:textSize="10sp" android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp" android:layout_marginTop="30dp"/>
            <TextView
                    android:text="000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/follow" android:textStyle="bold"
                    android:textSize="12sp" android:textColor="@color/colorBlack"
                    android:layout_gravity="center" android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="75dp"
                android:layout_height="96dp"
                android:layout_gravity="center_vertical">
            <TextView
                    android:text="FOLLOWER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_follower" android:textStyle="bold"
                    android:textSize="10sp" android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp" android:layout_marginTop="30dp"/>
            <TextView
                    android:text="000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/follower" android:textStyle="bold"
                    android:textSize="12sp" android:textColor="@color/colorBlack"
                    android:layout_gravity="center" android:inputType="number"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>