<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/home_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:lineSpacingExtra="-24sp"
        android:lineHeight="1sp"
        android:textColor="#e22d43"
        android:text="Hidden Line-up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="38dp"
        />


    <TextView
        android:id="@+id/home_header_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:lineSpacingExtra="5sp"
        android:lineHeight="17sp"
        android:textColor="#e22d43"
        android:text="SUMMER SEASON"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_header_title"
        android:layout_marginStart="40dp"
        />

    <Button
        android:id="@+id/home_header_more"
        android:layout_width="50dp"
        android:layout_height="14dp"
        android:textSize="9sp"
        android:lineSpacingExtra="4sp"
        android:text="MORE"
        android:lineHeight="13sp"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_12dp"
        android:background="@drawable/round_line_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>