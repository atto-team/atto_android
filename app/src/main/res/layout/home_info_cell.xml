<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/home_info_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:lineSpacingExtra="7sp"
        android:lineHeight="20sp"
        android:textColor="@android:color/black"
        android:text="Who Creator?"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_16dp"
        />

    <TextView
        android:id="@+id/home_info_remain_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:lineHeight="18sp"
        android:textColor="#e22d43"
        android:lineSpacingExtra="6sp"
        android:text="Remaining time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/home_info_remain_time"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:id="@+id/home_info_remain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:lineHeight="18sp"
        android:textColor="#e22d43"
        android:lineSpacingExtra="6sp"
        android:textStyle="bold"
        android:text="00Days 00:00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dimen_16dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>