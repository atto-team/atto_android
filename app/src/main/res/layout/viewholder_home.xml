<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

 <include
     android:id="@+id/home_header_cell"
     android:layout_width="match_parent"
     android:layout_height="96dp"
     layout="@layout/home_header_cell"
     />

 <include
     android:id="@+id/home_insert_coin_cell"
     android:layout_width="match_parent"
     android:layout_height="70dp"
     layout="@layout/insert_coin_cell"
     app:layout_constraintTop_toBottomOf="@+id/home_header_cell"
     />

<com.nimontoy.android.view.custom.HomeToyCell
    android:id="@+id/home_toy_cell"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@+id/home_insert_coin_cell"
    app:layout_constraintBottom_toTopOf="@+id/home_info_cell"
    />

 <include
     android:id="@+id/home_info_cell"
     android:layout_width="match_parent"
     android:layout_height="45dp"
     layout="@layout/home_info_cell"
     app:layout_constraintBottom_toBottomOf="parent"
     />



</androidx.constraintlayout.widget.ConstraintLayout>