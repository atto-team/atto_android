<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nimontoy.android.controller.activity.login.SignupAcitivty">


    <include
            android:id="@+id/back_arrow_toolbar"
            layout="@layout/frame_backarrow_toolbar"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="parallax"/>
    <TextView
            android:text="Create an Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/back_arrow_toolbar"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:drawableLeft="@drawable/icon_hum"
            android:drawablePadding="15dp"
            android:ems="10"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:id="@+id/edit_name" android:layout_marginTop="71dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Mail"
            android:drawableLeft="@drawable/icon_mail"
            android:drawablePadding="15dp"
            android:ems="10"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_name" android:id="@+id/edit_mail"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:drawableLeft="@drawable/icon_lock"
            android:drawablePadding="15dp"
            android:ems="10"
            android:id="@+id/edit_password"
            app:layout_constraintTop_toBottomOf="@+id/edit_mail" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp" android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:drawableLeft="@drawable/icon_lock"
            android:drawablePadding="15dp"
            android:ems="10"
            android:id="@+id/edit_confirm_password"
            app:layout_constraintTop_toBottomOf="@+id/edit_password" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp" android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="By creating an account you agree to our\nTmers of Service and Privacy Policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:id="@+id/textView3" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_confirm_password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <Button
            android:text="CONTINUE"
            android:background="@drawable/round_square"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:id="@+id/btn_signup" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
