<?xml version="1.0" encoding="utf-8"?>
<com.nimontoy.android.view.custom.ConstraintCarouselItemContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    >

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_toy_lineup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".85"
        app:layout_constraintDimensionRatio="w, 10:8"
        />

    <ImageView
        android:id="@+id/image_item_toy_foothold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/oval_white"
        android:outlineProvider="background"
        android:background="@drawable/oval_white"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/group_toy_lineup"
        app:layout_constraintEnd_toEndOf="@id/group_toy_lineup"
        app:layout_constraintBottom_toBottomOf="@+id/group_toy_lineup"
        app:layout_constraintTop_toTopOf="@+id/group_toy_lineup"
        app:layout_constraintDimensionRatio="h, 10:2"
        app:layout_constraintVertical_bias=".95"
        />

    <com.nimontoy.android.view.custom.UrlImageView
        android:id="@+id/image_item_toy_vote"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="@+id/group_toy_lineup"
        app:layout_constraintBottom_toBottomOf="@+id/group_toy_lineup"
        app:layout_constraintStart_toStartOf="@+id/group_toy_lineup"
        app:layout_constraintEnd_toEndOf="@+id/group_toy_lineup"
        app:layout_constraintDimensionRatio="h, 1:1"
        />



</com.nimontoy.android.view.custom.ConstraintCarouselItemContainer>