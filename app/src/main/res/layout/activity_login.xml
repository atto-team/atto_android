<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nimontoy.android.controller.activity.login.LoginActivity"
    android:background="@color/colorDark">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:src="@drawable/ic_logo_white"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="145dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.nimontoy.android.view.custom.OneLineTextInputView
        android:id="@+id/id_input"
        app:input_image_src="@drawable/ic_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="52dp"
        app:layout_constraintHorizontal_bias="0.49"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:input_div_color="@color/colorWhite"
        app:input_text_color="@color/colorWhite"/>

    <com.nimontoy.android.view.custom.OneLineTextInputView
        android:id="@+id/pw_input"
        app:input_image_src="@drawable/ic_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/id_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="52dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="52dp"
        app:layout_constraintHorizontal_bias="0.49"
        app:input_div_color="@color/colorWhite"
        app:input_text_color="@color/colorWhite"/>

    <Button
        android:text="@string/login_text"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:id="@+id/email_login_button"
        android:background="@drawable/round_square"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/pw_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="52dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="52dp"/>


    <com.kakao.usermgmt.LoginButton
        android:id="@+id/kakao_login"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email_login_button"
        app:layout_constraintEnd_toStartOf="@+id/facebook_login_button" android:layout_marginEnd="16dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/kakao_login_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email_login_button"
        app:layout_constraintEnd_toStartOf="@+id/facebook_login_button"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_login_kakao"
        android:backgroundTint="@android:color/transparent"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/twitter_login_button"
        android:layout_marginEnd="39dp" android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email_login_button"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/facebook_login_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/facebook_login"
        android:src="@drawable/ic_login_facebook"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email_login_button"
        app:layout_constraintStart_toEndOf="@+id/kakao_login_button"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/twitter_login_button"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/twitter_login_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toStartOf="@+id/google_login_button"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email_login_button"
        android:src="@drawable/ic_login_twitter"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/facebook_login_button"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/google_login_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email_login_button"
        android:src="@drawable/ic_login_google"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/twitter_login_button"
        android:layout_marginStart="8dp"/>

    <Button
        android:text="@string/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/sign_button"
        android:textAlignment="center"
        android:textColor="@color/colorGrey"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="87dp"
        app:layout_constraintEnd_toStartOf="@+id/forget_button"
        android:layout_marginEnd="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/kakao_login_button"/>
    <Button
        android:text="@string/forget_account"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:id="@+id/forget_button"
        android:textAlignment="center"
        android:clickable="false"
        android:textColor="@color/colorGrey"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="87dp"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/google_login_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>
