<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nimontoy.android.controller.activity.login.LoginActivity"
        android:background="@color/colorDark">

    <ImageView
            android:layout_width="105dp"
            android:layout_height="108dp"
            android:src="@drawable/ic_logo_white" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="145dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="128dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="127dp"/>

    <com.nimontoy.android.view.custom.OneLineTextInputView
            android:id="@+id/lDText"
            app:input_image_src="@drawable/ic_id"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            app:layout_constraintHorizontal_bias="0.49"
            android:layout_marginTop="65dp" app:layout_constraintTop_toBottomOf="@+id/imageView">
    </com.nimontoy.android.view.custom.OneLineTextInputView>

    <com.nimontoy.android.view.custom.OneLineTextInputView
            android:id="@+id/PWText"
            app:input_image_src="@drawable/ic_password"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/lDText" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/email_login" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="55dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.226">
    </com.nimontoy.android.view.custom.OneLineTextInputView>

    <Button
            android:text="Log in"
            android:layout_width="256dp"
            android:layout_height="41dp"
            android:id="@+id/email_login" android:background="@drawable/round_square"
            android:textColor="@color/colorWhite" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/PWText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="78dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp"/>


    <com.kakao.usermgmt.LoginButton
            android:id="@+id/com_kakao_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="77dp" app:layout_constraintEnd_toStartOf="@+id/facebook_login"
            android:layout_marginEnd="36dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login" android:background="@drawable/ic_kakao_login">
    </com.kakao.usermgmt.LoginButton>
    <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toStartOf="@+id/twitter_login"
            android:layout_marginEnd="39dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login" android:background="@drawable/ic_facebook_login"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/twitter_login" app:layout_constraintEnd_toStartOf="@+id/google_login"
            android:layout_marginEnd="34dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login" android:background="@drawable/ic_twitter_login"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp" android:id="@+id/google_login"
            android:layout_marginEnd="78dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/email_login" android:background="@drawable/ic_google_login"/>
    <Button
            android:text="Sign up"
            android:layout_width="wrap_content"
            android:layout_height="15dp" android:id="@+id/sign_button"
            android:textAlignment="center"
            android:textColor="@color/colorGrey" android:background="#00FF0000" android:textAllCaps="false"
            android:textSize="10sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="87dp"
            app:layout_constraintEnd_toStartOf="@+id/forget_button" android:layout_marginEnd="72dp"
            android:layout_marginBottom="51dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/com_kakao_login"/>
    <Button
            android:text="Forget account?"
            android:layout_width="wrap_content"
            android:layout_height="15dp" android:id="@+id/forget_button"
            android:textAlignment="center" android:clickable="false"
            android:textColor="@color/colorGrey" android:background="#00FF0000" android:textAllCaps="false"
            android:textSize="10sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="87dp"
            android:layout_marginBottom="51dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/twitter_login"/>

</androidx.constraintlayout.widget.ConstraintLayout>
